<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th>Color Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="animal_list">
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= animal.color %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr/>
  <input id="common_name" type="text" name="animal[common_name]" placeholder="Common Name"/>
  <input id="latin_name" type="text" name="animal[latin_name]" placeholder="Latin Name"/>
  <input id="kingdom" type="text" name="animal[kingdom]" placeholder="Kingdom"/>
  <button id="add_animal">Create New Animal</button>
<hr/>

